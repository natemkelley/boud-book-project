{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "api/*": ["./src/api/*"],
      "helpers/*": ["./src/helpers/*"]
    },
    "types": ["@nuxtjs/firebase", "@nuxt/types", "@nuxtjs/axios", "@types/node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
